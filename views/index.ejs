<% include header.ejs %>

<div class="jumbotron">
    <div class="container web-title">
        <h1>Instagram <br/>profile picture viewer !</h1>
        <p>
            Super Easy
        </p>
    </div>
</div>

<section class="content-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <% if(status != 200){  %>
                <div class="alert alert-danger alert-dismissible fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>

                    <h4> Oh snap! You got an error! </h4>
                    <p>
                        It seems like you have entered a wrong username. Please check it for us to work with !
                    </p>
                </div>
                <% }%>

                <form class="input-group input-group-lg" id="the-form" method="post" action="/">
                    <input type="text" class="form-control" id="username" name="username"  placeholder="Username" autocomplete="off" required>
                    <div class="input-group-btn">
                        <input type="submit" name="submit" class="btn btn-primary" value="View">
                    </div>
                </form>

                <div style="margin: 20px 0; display: <%= display %> ">
                    <a class="fancybox" rel="group" href="">
                        <img class="img-responsive img-thumbnail" id="the-image" src="<%= src %>" alt="Instagram profile picture viewer.">
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>

<% include footer.ejs %>